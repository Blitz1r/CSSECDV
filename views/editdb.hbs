
<link rel="stylesheet" href="/css/database.css">

<body>
    <div class="container">
        <div class="sidebar">
            <div class="logo">LOGO</div>
            <ul class="menu">
                <li><a href="#" class="menu-item" onclick="window.location.href='/dbview'">Database</a></li>
                <li><a href="#" class="menu-item" onclick="window.location.href='/editdb'">Edit Database</a></li>
                <li><a href="#" class="menu-item" onclick="window.location.href='Calendar.html'">Calendar</a></li>
            </ul>
        </div>
        
        <div class="main-content">
            <form id="filter-form" action="/editdb/filter" method="post">
                <div class="header">
                    <h1>Edit Database</h1>
                    <div class="search-filter">
                        <input type="text" placeholder="Search" class="box">
                        <div class="date-filter">
                            <label for="from-date">From:</label>
                            <input type="date" id="from-date">
                            <label for="to-date">To:</label>
                            <input type="date" id="to-date">
                        </div>
                        <div class="enum-filter">
                            <label for="sort-options" >Sort By:</label>
                            <select id="sort-options" name="sortOptions" class="box">
                                <option value="newestFormNumber">Newest Form Number</option>
                                <option value="oldestFormNumber">Oldest Form Number</option>
                                <option value="newestPickupDate">Newest Pickup Date</option>
                                <option value="oldestPickupDate">Oldest Pickup Date</option>
                            </select>
                        </div>
                        <button class="filter-btn">Filter</button>
                    </div>
                    <div class="user-profile">
                        <span class="user-name">admin</span>
                        <div class="user-avatar"></div>
                    </div>
                </div>
            </form>

            <form id="edit-form" method="post">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Form Number</th>
                                <th>Location</th>
                                <th>Destination</th>
                                <th>Pickup Date - </th>
                                <th>Departure Date - Time</th>
                                <th>Return Date</th>
                                <th>Passengers</th>
                                <th>Contact No.</th>
                                <th>Email</th>
                                <th>Additional Info</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            {{#each bookings}}
                            <tr>
                                <td><input type="checkbox" class="row-checkbox" name="ids" value={{this._id}}></td>
                                <td>{{this.formNumber}}</td>
                                <td>{{this.pickupBuilding}}</td>
                                <td>{{this.destinationBuilding}}</td>
                                <td>{{this.pickupDate}} - {{this.pickupTime}}</td>
                                <td>{{this.departureDate}} - {{this.departureTime}}</td>
                                <td>N/A</td>
                                <td>{{this.pickupPassengers}}</td>
                                <td>{{this.contactNumber}}</td>
                                <td>{{this.contactEmail}}</td>
                                <td>{{this.departureAddInformation}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="edit-options">
                    <button type="button" class="edit-button" onclick="submitForm('/editdb/edit')">Edit</button>
                    <button type="button" class="delete-button" onclick="submitForm('/editdb/delete')">Delete</button>
                </div>
            </form>
        </div>
    </div>
</body>

<script>
    function submitForm(action) {
        const form = document.getElementById('edit-form');
        form.action = action;
        form.submit();
    }
</script>

