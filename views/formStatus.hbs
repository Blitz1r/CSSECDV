<title>Booking Status</title>
<link rel="stylesheet" href="../css/styles.css">
<body>
    <div class="status-container">
        <h2>Booking Status</h2>
        <div class="status-info">
            <div class="status-item">
                <span class="label">Reference Code:</span>
                <span class="value">{{form.referenceCode}}</span>
            </div>
            <div class="status-item">
                <span class="label">Pickup Location:</span>
                <span class="value">{{form.pickupAddress}}</span>
            </div>
            <div class="status-item">
                <span class="label">Destination:</span>
                <span class="value">{{form.destinationAddress}}</span>
            </div>
            <div class="status-item">
                <span class="label">Pickup Date:</span>
                <span class="value">{{form.pickupDate}}</span>
            </div>
            <div class="status-item">
                <span class="label">Pickup Time:</span>
                <span class="value">{{form.pickupTime}}</span>
            </div>
            <div class="status-item">
                <span class="label">Departure Date:</span>
                <span class="value">{{form.departureDate}}</span>
            </div>
            <div class="status-item">
                <span class="label">Departure Time:</span>
                <span class="value">{{form.departureTime}}</span>
            </div>
            <div class="status-item">
                <span class="label">Passengers:</span>
                <span class="value">{{form.pickupPassengers}}</span>
            </div>
            <div class="status-item">
                <!-- Processing, Confirmed, Cancelled -->
                <span class="label">Status:</span>
                <span class="value">Processing</span> 
            </div>
        </div>
        <div class="status-message">
            Your booking is in progress. We are processing your request and will notify you shortly.
        </div>
        <button class="back-button" onclick="window.location.href='/'">Back to Options</button>
    </div>
</body>
